<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <!-- 标题栏  Start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >
            <LinearLayout
                android:id="@+id/ll_ad_back"
                android:layout_width="0dp"
            	android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_16">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/vector_drawable_icon_back" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="0dp"
            	android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />
            <TextView
            android:id="@+id/tv_ad_right"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:textSize="@dimen/dp_14"
            android:text="@string/str_ad_tv_right"/>
        </LinearLayout>
    <View
            android:layout_width="wrap_content"
            android:layout_height="0.01dip"
            android:layout_gravity="center"
            android:background="@color/gray" />
    <!-- 标题栏  END-->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</LinearLayout>